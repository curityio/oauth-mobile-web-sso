<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="HeaderTextStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="MenuButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">@color/colorBlue</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="Theme.App.Dialog.FullScreen" parent="Theme.MaterialComponents.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@color/colorWhite</item>
    </style>

</resources>